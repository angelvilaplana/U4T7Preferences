<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tvPlayerName"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tvPlayerName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/etPlayerName"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etPlayerName"
            app:layout_constraintStart_toStartOf="@+id/tvPlayerName"
            app:layout_constraintEnd_toEndOf="@+id/tvPlayerName"
            app:layout_constraintTop_toBottomOf="@+id/tvPlayerName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tvLevel"/>
    <TextView
            android:text="@string/tvLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvLevel"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="@+id/etPlayerName"
            app:layout_constraintEnd_toEndOf="@+id/etPlayerName"
            app:layout_constraintTop_toBottomOf="@+id/etPlayerName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/spinnerLevel"
            android:textColor="@color/colorPrimary"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/spinnerLevel"
            app:layout_constraintStart_toStartOf="@+id/tvLevel"
            app:layout_constraintEnd_toEndOf="@+id/tvLevel"
            app:layout_constraintTop_toBottomOf="@+id/tvLevel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tvScore"/>
    <TextView
            android:text="@string/tvScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvScore"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="@+id/spinnerLevel"
            app:layout_constraintEnd_toEndOf="@+id/spinnerLevel"
            app:layout_constraintTop_toBottomOf="@+id/spinnerLevel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/etScore"
            android:textColor="@color/colorPrimary"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etScore"
            app:layout_constraintStart_toStartOf="@+id/tvScore"
            app:layout_constraintEnd_toEndOf="@+id/tvScore"
            app:layout_constraintTop_toBottomOf="@+id/tvScore"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/btQuit"/>
    <Button
            android:text="@string/btQuit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btQuit"
            app:layout_constraintStart_toStartOf="@+id/etScore"
            app:layout_constraintEnd_toEndOf="@+id/etScore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etScore"
            app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>